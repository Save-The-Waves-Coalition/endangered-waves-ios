    pod 'ImagePicker'
    pod 'Lightbox'
    pod 'SVProgressHUD'

    # Other
    pod 'AppCenter', '~> 1.5'


    # Targets
    target 'Endangered Waves' do

    end

    target 'Endangered Waves dev' do

    end
end


